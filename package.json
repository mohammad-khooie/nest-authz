{
  "name": "nest-authz",
  "version": "2.0.0",
  "description": "基于 node-casbin 实现的 RBAC 权限控制模块。",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">= 10.13.0"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "clean": "rimraf dist",
    "commit": "git-cz",
    "build": "rimraf dist && tsc -p tsconfig.json",
    "prepublish": "yarn lint && yarn build",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "release": "standard-version",
    "test": "jest"
  },
  "keywords": [],
  "author": "dreamdevil00",
  "license": "MIT",
  "dependencies": {
    "casbin": "4.7.2"
  },
  "devDependencies": {
    "@nestjs/common": "7.2.0",
    "@nestjs/core": "7.2.0",
    "@types/jest": "24.9.0",
    "@types/node": "11.15.18",
    "commitizen": "4.1.2",
    "cz-conventional-changelog": "3.2.0",
    "jest": "24.9.0",
    "prettier": "1.19.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.1",
    "rxjs": "6.5.5",
    "standard-version": "7.1.0",
    "ts-jest": "24.3.0",
    "ts-node": "8.10.1",
    "tslint": "5.11.0",
    "typescript": "3.7.5"
  },
  "peerDependencies": {
    "@nestjs/common": "7.2.0",
    "@nestjs/core": "7.2.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dreamdevil00/nest-authz.git"
  },
  "files": [
    "dist",
    "src",
    "LICENSE",
    "README.md"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
